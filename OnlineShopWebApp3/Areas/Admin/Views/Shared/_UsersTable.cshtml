@model List<UserViewModel>


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">E-Mail</th>


            <th scope="col"></th>
            <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].Email</td>
                <td>
                    <a class="text-dark" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userName="@Model[i].Name"> Delete </a>
                </td>
                <td>
                    <div class="nav-item dropright">
                        <a class="dropdown-toggle text-dark" data-toggle="dropdown" aria-toggle="true" aria-expanded="false"> Edit </a>
                        <div class="dropdown-menu rounded-0">
                            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="ChangePassword" asp-route-userName="@Model[i].Name"> Password </a>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="ChangeEmail" asp-route-userName="@Model[i].Name"> Email </a>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="EditRights" asp-route-name="@Model[i].Name"> Rights </a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

       