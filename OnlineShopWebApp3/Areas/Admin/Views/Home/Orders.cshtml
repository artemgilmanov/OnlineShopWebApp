@model List<Order>

<div class="container-fluid pt-3">
    <div class="row">

        <div class="col-3">
            @await Html.PartialAsync("AdminPanel")
        </div>

        <div class="col-3">
            <div>
                <h5>List of Orders</h5>
            </div>
            
            <div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Total</th>
                            <th scope="col">Status</th>
                            <th scope="col">Date</th>
                            <th scope="col">Time</th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <th scope="row">@(i+1)</th>
                                <td>@Model[i].Cost</td>
                                <td>@Model[i].Status</td>
                                <td>@Model[i].CreatedDateTime.ToString("d")</td>
                                <td>@Model[i].CreatedDateTime.ToString("t")</td>
                                <td>
                                    <a class="text-dark" asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model[i].Id">Details</a>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

