@model List<UserViewModel>

<div class="container-fluid pt-3">
    <div class="row">
        <div class="col-3">
            @await Html.PartialAsync("AdminPanel")
        </div>
        <div class="col-3">
                <div>
                    <h5>List of Users</h5>
                </div>

                <div>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Index</th>
                                <th scope="col">E-Mail</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <th scope="row">@(i + 1)</th>
                                    <td>@Model[i].Email</td>
                                    <td>
                                    <a class="text-dark" asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-name="@Model[i].Name">Details</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
        </div>
    </div>
</div>