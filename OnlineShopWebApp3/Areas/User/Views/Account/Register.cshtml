@model Register

<div class="container-fluid text-center">
    <h3 class="display-4">Register</h3>
</div>
<br />

<form class="needs-validation" form asp-action="Register" asp-controller="Account">
    <div class="container-fluid">

        <div class="row justify-content-center">
            <div class="col-4">
                <div class="validation" asp-validation-summary="All"></div>
            </div>
        </div>
        <br/>
        <div class="row justify-content-center">
            <div class="col-4">
                <label asp-for="FirstName" class="col-form-label">Firstname</label><br />
                <input asp-for="FirstName" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                <label asp-for="LastName">Lastname</label><br />
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                <label asp-for="Email" class="col-form-label">Email</label><br />
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                <label asp-for="Password">Password</label><br />
                <input type="password" asp-for="Password" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                <label asp-for="RepeatPasswort">Repeat password</label><br />
                <input type="password" asp-for="RepeatPasswort" class="form-control" />
            </div>
        </div>
    </div>
    <br />
    <div class="row justify-content-center">
        <div class="col-4">
            <button type="submit" class="btn btn-light btn-block" asp-area="User" asp-controller="Account" asp-action="Register">Register</button>
        </div>
    </div>
     <br/>
    <div class="row justify-content-center">
        <div class="col-4 text-center">
            <a class="text-dark" asp-area="User" asp-controller="Account" asp-action="Login">Login</a>
        </div>
    </div>
</form>