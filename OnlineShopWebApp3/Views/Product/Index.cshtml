@model Product

<div class="container-fluid">
    <div class="row pt-5">
        <div class="col-6">
        <img src=@Model.ImagePath class="img-fluid" alt="Image of a product.">
        </div>
        <div class="col-6">
            <div><h5>@Model.Name</h5></div>
            <div><h5>@Model.Description</h5></div>

            <div>
                <a class="btn btn-light" href="/home/index/" role="button">Continue</a>
            </div>

            <div>
                <a class="btn btn-light" href="/cart/addToCart?productId=@Model.Id" role="button">Add</a>
            </div>
        </div>
   
    </div>

</div>