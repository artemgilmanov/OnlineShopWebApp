<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom fixed-top p-0 p-0">
        <div class="container-fluid">
            <div class="row flex-grow-1 align-content-center">

                <div class="flex-column border-right">
                    <a class="nav-link text-dark" asp-area="Brand" asp-controller="Home" asp-action="Index"><strong> vecher </strong></a>
                </div>

                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">

                    <div class="flex-column col-5">
                        <div class="d-flex justify-content-between align-content-center">
                            <a class="nav-link disabled" href="#"> </a>
                            <a class="nav-link text-dark" asp-area="Brand" asp-controller="About" asp-action="Index"> About </a>
                        </div>
                    </div>

                    <div class="flex-column col-5">
                        <div class="d-flex justify-content-between">
                            <div class="nav-item dropright">
                                @*<a class="nav-link text-dark" asp-area="Brand" asp-controller="Home" asp-action="Index"> Filter </a>*@
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Filter
                                </a>
                                <div class="dropdown-menu rounded-0" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-area="Brand" asp-controller="Home" asp-action="Filter"
                                       asp-route-category="@Constants.Category.cup">Cup</a>
                                    <a class="dropdown-item" asp-area="Brand" asp-controller="Home" asp-action="Filter"
                                       asp-route-category="@Constants.Category.mug">Mug</a>
                                    <a class="dropdown-item" asp-area="Brand" asp-controller="Home" asp-action="Filter"
                                       asp-route-category="@Constants.Category.teapot">Teapot</a>
                                    <a class="dropdown-item" asp-area="Brand" asp-controller="Home" asp-action="Filter"
                                       asp-route-category="@Constants.Category.set">Set</a>
                                    <a class="dropdown-item" asp-area="Brand" asp-controller="Home" asp-action="Filter"
                                       asp-route-category="@Constants.Category.bowl">Bowl</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="Brand" asp-controller="Home" asp-action="Index">Clear</a>
                                </div>
                            </div>

                            @if (User.IsInRole(Constants.UserRoleName))
                            {
                                <a class="nav-link text-dark" asp-area="Account" asp-controller="Cart" asp-action="Index">
                                    Cart @await Component.InvokeAsync("Cart")
                                </a>
                            }
                            @if (User.IsInRole(Constants.AdminRoleName))
                            {
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Products"> Administrator </a>
                            }

                        </div>
                    </div>
                </div>

                <div class="flex-column border-left">
                  
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-dark" asp-area="Account" asp-controller="Authorization" asp-action="Logout"> Logout </a>
                    }
                    else
                    {
                        <a class="nav-link text-dark" asp-area="Account" asp-controller="Authorization" asp-action="Login"> Login </a>
                    }
                </div>
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" 
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
        </div>
    </nav>
</header>