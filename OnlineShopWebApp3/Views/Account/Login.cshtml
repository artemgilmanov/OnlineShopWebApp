
<form class="row g-3" method="post">

    <div class="col-12">
        <h3>Login</h3>
    </div>

    <div class="col-6">
        <label for="email" class="form-label">E-Mail</label>
        <input type="text" name="email" class="form-control" id="email">
    </div>
    <div class="col-6">
        <label for="passwort" class="form-label">Passwort</label>
        <input type="text" name="passwort" class="form-control" id="passwort">
    </div>
    

    <div class="col-12">
        <div class="form-check">
            <input class="form-control" name="rememberMe" type="checkbox" id="rememberMe">
            <label class="fform-control" for="rememberMe">
                Remembe me
            </label>
        </div>
    </div>

        <div class="col-12">
            <button class="btn btn-primary" type="submit" asp-controller="Account" asp-action="Login">Login</button>
        </div>

        <div class="col-12">
            <a class="text" asp-controller="Account" asp-action="Create">Create Account</a>
        </div>

</form>