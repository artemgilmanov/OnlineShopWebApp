@model ChangePassword

<div class="container-fluid">
    <div class="row flex-row border-bottom align-self-center">

        <div class="flex-column col-sm m-0 p-0 border-top-0 border-right ">
            @await Html.PartialAsync("_UsersTable", Model.Users)
        </div>

        <div class="flex-column col-sm m-0 p-0 border-top-0 align-self-center">

            <div class="row justify-content-center pt-5">
                    <p> Change password for <strong> @Model.UserName </strong> </p>
            </div>

            <div class="row justify-content-center">
                <div class="validation" asp-validation-summary="All"></div>
            </div>

            <div class="row justify-content-center">
                <form class="needs-validation" asp-controller="User" asp-action="ChangePassword">
                    <input type="hidden" name="UserName" value="@Model.UserName" />
                    <div class="form-row">
                        <label asp-for="Password">New password</label><br />
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-row">
                        <label asp-for="RepeatPasswort">Repeat new password</label><br />
                        <input asp-for="RepeatPasswort" class="form-control" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <br />

                    <div class="row justify-content-center">
                        <div>
                            <button type="submit" class="btn btn-light  btn-block" asp-area="Admin" asp-controller="User" asp-action="ChangePassword"> Update </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="flex-column col-sm-2 p-0 border-left">
            @await Html.PartialAsync("_AdminPanel")
        </div>
    </div>
</div>